@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employees";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string searchString = ViewBag.SearchString ?? "";
}

<h2>Employees</h2>

<!--  Search Form -->
<form asp-action="Index" method="get" class="mb-3 d-flex gap-2">
    <input type="text" name="searchString" value="@searchString" placeholder="Search by name or position" class="form-control" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<!--  Table -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Position</td>
                <td>@emp.Salary</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!--  Pagination -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@searchString">@i</a>
            </li>
        }
    </ul>
</nav>
